{
  "name": "@universal-logger/core",
  "version": "0.1.0",
  "description": "Universal Sentry-Compatible Logger - Drop-in replacement for Sentry SDK with local debugging",
  "author": "johnbox codes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asari/logger.git"
  },
  "homepage": "https://github.com/asari/logger#readme",
  "bugs": {
    "url": "https://github.com/asari/logger/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/ui/index.js",
      "types": "./dist/ui/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "example": "vite examples/simple",
    "example:simple": "vite examples/simple",
    "prepublishOnly": "npm run build && npm run test:run"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0",
    "zustand": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "zustand": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/coverage-v8": "^1.6.1",
    "jsdom": "^27.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "zustand": "^5.0.11"
  },
  "keywords": [
    "sentry",
    "logger",
    "debugging",
    "error-tracking",
    "tracing"
  ]
}
