{
  "name": "@universal-logger/core",
  "version": "0.1.0",
  "description": "Universal Sentry-Compatible Logger - Drop-in replacement for Sentry SDK with local debugging",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/ui/index.js",
      "types": "./dist/ui/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0",
    "zustand": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "zustand": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/coverage-v8": "^1.6.1",
    "jsdom": "^27.4.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "zustand": "^5.0.11"
  },
  "keywords": [
    "sentry",
    "logger",
    "debugging",
    "error-tracking",
    "tracing"
  ],
  "license": "MIT"
}
